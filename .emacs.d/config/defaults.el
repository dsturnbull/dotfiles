;; defaults
(setq-default
 make-backup-files nil ;; stop shitting in my filesystem

 ;; formatting
 c-basic-indent 4
 c-basic-offset 4
 tab-width 4

 ;; pretty colours
 font-lock-mode t
 font-lock-maximum-decoration t
 global-font-lock-mode t

 ;; niceties
 inhibit-splash-screen t
 require-final-newline t
 scroll-bar-mode nil
 show-trailing-whitespace t
 vc-follow-symlinks t
 visible-bell t
 debug-on-error nil
 debug-on-signal nil)
